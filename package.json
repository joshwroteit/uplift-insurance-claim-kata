{
  "name": "uplift-insurance-claim-kata",
  "version": "1.0.0",
  "description": "Insurance claim processor tdd with jest",
  "main": "dist/claims-processor.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/claims-processor.js",
    "dev": "ts-node src/claims-processor.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/joshwroteit/uplift-insurance-claim-kata/issues"
  },
  "homepage": "https://github.com/joshwroteit/uplift-insurance-claim-kata#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
